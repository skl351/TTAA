<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="720px"
    android:layout_height="360px"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <jt.ttaa.customview.banner.BannerLayout
        android:id="@+id/view_pager"
        android:layout_width="720px"
        android:layout_height="360px"
        app:autoPlayDuration="2000"
        app:indicatorMargin="10dp"
        app:indicatorPosition="centerBottom"
        app:indicatorShape="oval"
        app:indicatorSpace="6dp"
        app:isAutoPlay="true"
        app:scrollDuration="600"
        app:selectedIndicatorColor="@color/select_pot"
        app:selectedIndicatorHeight="6dp"
        app:selectedIndicatorWidth="6dp"
        app:unSelectedIndicatorColor="@color/unselect_pot"
        app:unSelectedIndicatorHeight="6dp"
        app:unSelectedIndicatorWidth="6dp"/>

</RelativeLayout>
